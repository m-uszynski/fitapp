@model IEnumerable<FitApp.Models.Task>

@{
    ViewBag.Title = "List";
}

<h2>Lista</h2>

<p>
    @Html.ActionLink("Stwórz", "Create",new { Id=ViewBag.ChallengeId})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(Model=>Model.RealizationTime)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem=>item.RealizationTime)
        </td>
 
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.Id }, new { @class = "btn btn-primary" })

        </td>
    </tr>
}

</table>
