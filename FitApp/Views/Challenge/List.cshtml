@model IEnumerable<FitApp.Models.Challenge>

@{
    ViewBag.Title = "List";
}

<h2>Lista wyzwań</h2>

<p>
    @if (ViewBag.UserId == ViewBag.AdminId)
    {
        @Html.ActionLink("Stwórz wyzwanie", "Create", new { GroupId = ViewBag.GroupId })
    }
</p>
    
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>

        @if (ViewBag.UserId == ViewBag.AdminId)
        {

        <td>
            @Html.ActionLink("Stwórz zadanie", "Create", "Task", new { Id = item.Id }, new { @class = "btn btn-primary" })
            <br />
            @Html.ActionLink("Zakończ wyzwanie", "End", "Challenge", new { Id = item.Id }, new { @class = "btn btn-danger" })
            <br />
            @Html.ActionLink("Przeglądaj zadania", "List", "Task", new { Id = item.Id }, new { @class = "btn btn-info" })
            <br />

        </td>
        }
        else
        {
            <td>
                @Html.ActionLink("Realizacja", "Realization","Task", new { Id = item.Id }, new { @class = "btn btn-primary" })

            </td>
        }


    </tr>
}

</table>
