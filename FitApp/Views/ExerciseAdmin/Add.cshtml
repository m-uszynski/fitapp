@model FitApp.Models.ExerciseAdmin
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="userform">
    <h2>Dodaj przykładowe ćwiczenia</h2>

    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div>
                @Html.LabelFor(u => u.ExerciseName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(u => u.ExerciseName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(u => u.ExerciseName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                @Html.LabelFor(u => u.VideoLink, htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(u => u.VideoLink, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(u => u.VideoLink, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                @Html.LabelFor(u => u.BurnedCalories, htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(u => u.BurnedCalories, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(u => u.BurnedCalories, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                @Html.LabelFor(u => u.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(u => u.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(u => u.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                <input type="submit" value="Dodaj ćwiczenie" class="submitbutton" />
            </div>

        </div>

    }
</div>
