@model FitApp.Models.Meal

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="userform">
    <h3>Dodaj posiłek</h3>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div>
            @Html.LabelFor(u => u.MealName)
            <div>
                @Html.EditorFor(u => u.MealName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(u => u.MealName, "", new { @class = "text-danger" })
            </div>
        </div>


        <div>
            @Html.LabelFor(u => u.MealDate)
            <div>
                @Html.EditorFor(u => u.MealDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(u => u.MealDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            @Html.LabelFor(u => u.MealTime)
            <div>
                @Html.EditorFor(u => u.MealTime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(u => u.MealTime, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div>
            <input type="submit" value="Dodaj posiłek" class="submitbutton" />
        </div>


    }
</div>