@model IEnumerable<FitApp.Models.User>

@{
    ViewBag.Title = "Details";
}

<h2>Szczegóły</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        if (!item.Id.Equals(ViewBag.AdminId))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>

                <td>
                    @Html.ActionLink("Blokuj", "Block", new { UserId = item.Id }, new { @class = "btn btn-danger" })

                </td>
            </tr>
        }

    }

</table>
