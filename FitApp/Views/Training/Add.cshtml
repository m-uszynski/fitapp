@model FitApp.Models.Training

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="userform">
    <h3>Dodaj trening</h3>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
           
            <div>
                @Html.LabelFor(u => u.TrainingName)
                <div>
                    @Html.EditorFor(u => u.TrainingName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(u => u.TrainingName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                @Html.LabelFor(u => u.TrainingTime)
                <div>
                    @Html.EditorFor(u => u.TrainingTime, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(u => u.TrainingTime, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div>
                <input type="submit" value="Dodaj Trening" class="submitbutton" />
            </div>

        
    }
</div>

