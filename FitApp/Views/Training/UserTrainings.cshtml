@model IEnumerable<FitApp.Models.User>

@{
    ViewBag.Title = "UserTrainings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Treningi użytkowników</h2>

<p>
    @Html.ActionLink("Wróć do treningów","List", new { Controller = "Training"}, new { @class = "btn btn-info"})
</p>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Surname
            </td>
            <td>
                @item.Login
            </td>
            <td>
                @Html.ActionLink("Zobacz treningi", "UserTrainingList", "Training", new { Id = item.Id }, new { @class = "btn btn-success" })
            </td>
        </tr>
    }
</table>